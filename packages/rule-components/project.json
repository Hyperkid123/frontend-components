{
  "name": "@redhat-cloud-services/rule-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rule-components",
  "projectType": "library",
  "targets": {
    "build:cjs": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build:cjs"],
      "options": {
        "rootDir": "packages/rule-components/src",
        "main": "packages/rule-components/src/index.ts",
        "outputPath": "dist/@redhat-cloud-services/rule-components",
        "tsConfig": "packages/rule-components/tsconfig.cjs.json"
      }
    },
    "build:esm": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build:esm"],
      "options": {
        "rootDir": "packages/rule-components/src",
        "main": "packages/rule-components/src/index.ts",
        "outputPath": "dist/@redhat-cloud-services/rule-components/esm",
        "tsConfig": "packages/rule-components/tsconfig.esm.json"
      }
    },
    "build:styles": {
      "executor": "@redhat-cloud-services/frontend-components-executors:build-styles",
      "dependsOn": ["^build:styles", "build:cjs", "build:esm"],
      "options": {
        "outputPath": "dist/@redhat-cloud-services/rule-components",
        "sourceDir": "packages/rule-components"
      }
    },
    "build:packages": {
      "dependsOn": ["^build:packages", "build:cjs", "build:esm"],
      "executor": "@redhat-cloud-services/frontend-components-executors:build-packages",
      "options": {
        "outputPath": "dist/@redhat-cloud-services/rule-components",
        "forceTypes": true
      }
    },
    "transform:scss": {
      "dependsOn": ["^transform:scss", "build:cjs", "build:esm"],
      "executor": "@redhat-cloud-services/frontend-components-executors:transform-scss",
      "options": {
        "outputPath": "dist/@redhat-cloud-services/rule-components"
      }
    },

    "build": {
      "executor": "nx:noop",
      "dependsOn": ["^build", "build:styles", "build:packages", "transform:scss"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/types/**/*.ts", "packages/types/package.json"]
      }
    }
  },
  "tags": []
}
