{
  "name": "@redhat-cloud-services/chrome",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/chrome",
  "projectType": "library",
  "targets": {
    "build:cjs": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build:cjs"],
      "options": {
        "rootDir": "packages/chrome/src",
        "main": "packages/chrome/src/index.ts",
        "outputPath": "dist/@redhat-cloud-services/chrome",
        "tsConfig": "packages/chrome/tsconfig.cjs.json"
      }
    },
    "build:esm": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build:esm"],
      "options": {
        "rootDir": "packages/chrome/src",
        "main": "packages/chrome/src/index.ts",
        "outputPath": "dist/@redhat-cloud-services/chrome/esm",
        "tsConfig": "packages/chrome/tsconfig.esm.json"
      }
    },
    "build:packages": {
      "dependsOn": ["^build:packages", "build:cjs", "build:esm"],
      "executor": "@redhat-cloud-services/frontend-components-executors:build-packages",
      "options": {
        "outputPath": "dist/@redhat-cloud-services/frontend-components",
        "forceTypes": true
      }
    },

    "build": {
      "executor": "nx:noop",
      "dependsOn": ["^build", "build:packages"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/chrome/src/**/*", "packages/chrome/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/chrome/jest.config.ts"
      }
    }
  },
  "tags": ["scope:public"]
}
