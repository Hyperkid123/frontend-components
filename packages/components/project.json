{
  "name": "@redhat-cloud-services/frontend-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/types",
  "projectType": "library",
  "targets": {
    "build:cjs": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        "^build:cjs"
      ],
      "options": {
        "rootDir": "packages/components/src",
        "main": "packages/components/src/index.ts",
        "outputPath": "dist/@redhat-cloud-services/frontend-components",
        "tsConfig": "packages/components/tsconfig.cjs.json"
      }
    },
    "build:esm": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        "^build:esm"
      ],
      "options": {
        "rootDir": "packages/components/src",
        "main": "packages/components/src/index.ts",
        "outputPath": "dist/@redhat-cloud-services/frontend-components/esm",
        "tsConfig": "packages/components/tsconfig.esm.json"
      }
    },
    "build:styles": {
      "executor": "@redhat-cloud-services/frontend-components-executors:build-styles",
      "dependsOn": [
        "^build:styles",
        "build:cjs",
        "build:esm"
      ],
      "options": {
        "outputPath": "dist/@redhat-cloud-services/frontend-components",
        "sourceDir": "packages/components"
      }
    },
    "build:packages": {
      "dependsOn": [
        "^build:packages",
        "build:cjs",
        "build:esm"
      ],
      "executor": "@redhat-cloud-services/frontend-components-executors:build-packages",
      "options": {
        "outputPath": "dist/@redhat-cloud-services/frontend-components",
        "forceTypes": true
      }
    },
    "transform:scss": {
      "dependsOn": [
        "^transform:scss",
        "build:cjs",
        "build:esm"
      ],
      "executor": "@redhat-cloud-services/frontend-components-executors:transform-scss",
      "options": {
        "outputPath": "dist/@redhat-cloud-services/frontend-components"
      }
    },
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "^build",
        "build:styles",
        "build:packages",
        "transform:scss"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/components/src/**/*",
          "packages/components/package.json"
        ]
      }
    },
    "test:unit": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/components/jest.config.ts"
      }
    },
    "test:component": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "packages/components/cypres.config.ts",
        "tsConfig": "packages/components/tsconfig.cy.json",
        "devServerTarget": "my-react-app:build",
        "testingType": "component",
        "skipServe": true
      }
    }
  },
  "tags": [
    "scope:public"
  ]
}